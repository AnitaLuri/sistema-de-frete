<%= form_with model: @service_order do |form| %>
  <div>
    <%= form.label :from %>
    <%= form.text_field :from %>
  </div><br />

  <div>
    <%= form.label :to %>
    <%= form.text_field :to %>
  </div><br />

  <div>
    <%= form.label :distance %>
    <%= form.number_field :distance %>
  </div><br />

  <div>
    <%= form.label :recipient %>
    <%= form.text_field :recipient %>
  </div><br />

  <div>
    <%= form.label :product_code %>
    <%= form.text_field :product_code %>
  </div><br />

  <div>
    <%= form.label :width %>
    <%= form.number_field :width %>
  </div><br />

  <div>
    <%= form.label :height %>
    <%= form.number_field :height %>
  </div><br />

  <div>
    <%= form.label :depth %>
    <%= form.number_field :depth %>
  </div><br />

  <div>
    <%= form.label :weight %>
    <%= form.number_field :weight %>
  </div><br />

  <%= form.submit class:"btn btn-primary" %>
<% end %>