<h2>Modalidades de Transporte</h2>

<% if @transport_modes.empty? %>
  <p>Nenhuma Modalidade de Transporte cadastrada.</p>
<% end %>

<%= link_to('Cadastrar Nova Modalidade', new_transport_mode_path)%>

<% @transport_modes.each do |mode| %>
  <dl>
    <dt><strong><%= link_to mode.name, mode %></strong></dt>
    <dd>
      Distância mínima: <%= mode.minimum_distance %>m
    </dd>
    <dd>
      Distância máxima: <%= mode.maximum_distance %>m
    </dd>
    <dd>
      Status: <%= I18n.translate(mode.status) %>
    </dd>
  </dl>
<% end %>