<h2>Entrar</h2>
<br />

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mb-3">
      <%= f.label :email, for:"colFormLabel", class:"col-sm-2 col-form-label" %><br />
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"email", class:"form-control", id:"colFormLabel", placeholder:"@sistemadefrete.com.br" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :password, for:"password", class:"col-sm-2 col-form-label" %><br />
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "current-password", type:"password", class:"form-control", id:"password" %>
      </div>
    </div>
    
    <% if devise_mapping.rememberable? %>
      <div class="row mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Entrar", class:"btn btn-primary" %>
    </div>
  <% end %>
  <br />

  <%= render "devise/shared/links" %>
</div>